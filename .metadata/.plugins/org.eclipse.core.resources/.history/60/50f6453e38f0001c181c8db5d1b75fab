package sample08;

import javax.swing.JButton;
import javax.swing.JFrame;

public class Sound extends JFrame{
	//再生モード　停止
	static final int PLAY_MODE = 0;
	//再生モード　一時停止
	static final int PLAY_MODE_PAUSE = 1;
	//再生モード　再生
	static final int PLAY_MODE_PLAY = 1;
	
	//再生用の変数
	//ファイル名
	String filename;
	//再生モード
	int playMode = 0;
	//再生ボタン
	JButton bPlay;
	
	
	//コンストラクタ
	public Sound() {
		setBounds(200, 100, 300, 100);
		//再生ボタン設置
		bPlay = new JButton();
		bPlay.setText("PLAY");
		bPlay.addActionListener(new bPlayAction());
	}
	
	//再生ボタン用アクションリスナー
	private class bPlayAction imprements ActionListener {
		
	}
	
}
