package sampleJFrame;

import java.awt.Image;
import java.awt.MediaTracker;

import javax.swing.ImageIcon;

public class Cat_Normal extends Animal {
	private static final long serialVersionUID = 1L;
	
	//設定
	protected void prepareImageAndScoreAndVoice() {
		super.image = new ImageIcon(getClass().getClassLoader().getResource("./images/run_cat_smile.png")).getImage();
		MediaTracker tracker = new MediaTracker(this);
		Image smallCatImage = image.getImage().getScaledInstance((int) (image.getIconWidth() * 0.3), -1, Image.SCALE_SMOOTH);
		tracker.addImage(smallCupImage, 1);
		cupImage = new ImageIcon(smallCupImage);

		super.score = 5;
		super.voiceKey = "ニャー";
	};
	
}
