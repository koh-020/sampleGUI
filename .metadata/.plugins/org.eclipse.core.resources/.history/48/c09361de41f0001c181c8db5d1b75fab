package sample08;

import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javazoom.jl.player.jlp;

public class Sound extends JFrame{
	//再生モード　停止
	static final int STOP_MODE = 0;
	//再生モード　一時停止
	static final int PAUSE_MODE = 1;
	//再生モード　再生
	static final int PLAY_MODE = 1;
	
	//再生用の変数
	//ファイル名
	String filename;
	//再生モード
	int playMode = 0;
	//再生ボタン
	JButton bPlay;
	
	
	//コンストラクタ
	public Sound() {
		setBounds(200, 100, 300, 100);
		//再生ボタン設置
		bPlay = new JButton();
		bPlay.setText("PLAY");
		bPlay.addActionListener(new bPlayAction());
	}
	
	//再生ボタン用アクションリスナー
	private class bPlayAction implements ActionListener {
		@Override
		public void actionPerformed(ActionEvent e) {
			if(playMode == PLAY_MODE) {
				play();
			}
		}
	}
	
	//再生
	private void play() {
		playMode = PLAY_MODE;
		jlp Smile_Today.mp3;
		java javazoom.jl.player.jlp Smile_Today.mp3
	}
	
}
